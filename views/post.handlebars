<section class="container">
  <h3 class="post-name">{{post.title}}</h3>
  <section class="flex-row justify-center">
    <p>by {{post.user.username}} on {{format_date post.date}}</p>
    <p>{{post.content}}</p>
    <div>
      {{#each post.comments as |comment|}}
      {{> comment-details}}
      {{/each}}
    </div>
  </section>
</section>