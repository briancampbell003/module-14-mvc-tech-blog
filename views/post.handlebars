<section class="container">
  <h3 class="post-name">{{post.title}}</h3>
  <section class="flex-column justify-center">
    <p>by {{post.user.username}} on {{format_date post.date}}</p>
    <div class="post-content">
      <p>{{post.content}}</p>
    </div>
    <div class="comment-area">
      {{#each post.comments as |comment|}}
      {{> comment-details}}
      {{/each}}
    </div>
    <form class="form comment-form">
      <div class="form-group">
        <label for="comment">Add a comment:</label>
        <input class="form-input" type="text" id="new-comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">save comment</button>
      </div>
    </form>
  </section>
</section>

<script src="/js/addComment.js"></script>
